pipeline {
    agent any

    stages {
        stage('Unit Test') {
            steps {
                sh './ms-proposal.sh unit-test'
            }
        }

        stage('Build') {
            steps {
                sh './ms-proposal.sh build'
            }
        }

        stage('Prepare env') {
            steps {
                sh './ms-proposal.sh prepare-env'
            }
        }

        stage('Prepare db') {
            steps {
                sh './ms-proposal.sh prepare-db'
            }
        }

        stage('Acceptance test') {
            steps {
                sh './ms-proposal.sh acceptance-test'
            }
        }
    }

    post {
        always {
            sh "docker system prune -f"
            sh "touch $HOME/builds"
        }
        success {
            sh "echo success ${env.GIT_BRANCH} >> $HOME/builds"
        }
        failure {
            sh "echo failure ${env.GIT_BRANCH} >> $HOME/builds"
        }
    }
}
